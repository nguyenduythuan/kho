<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ac46ea8b"
    tools:context="com.example.thuanduy.trochoi.Choi">

    <TableLayout
        android:id="@+id/tableIMG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintVertical_bias="0.5">

    </TableLayout>
    <TextView
        android:textStyle="bold"
        android:layout_width="89dp"
        android:layout_height="26dp"
        android:id="@+id/nhacnho"
        android:text=""
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="#060606"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/TenHinh"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.036"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/TenHinh"
        android:layout_width="185dp"
        android:gravity="center"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        android:text="Ten Tu"
        android:textColor="#fc3b00"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/tableIMG"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037"
        app:layout_constraintHorizontal_bias="0.504" />

    <TextView
        android:id="@+id/textDiem"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:text="TextView"
        android:textSize="20dp"
        android:textColor="#fd0202"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/TenHinh"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tableIMG"
        app:layout_constraintVertical_bias="0.04000002" />
</android.support.constraint.ConstraintLayout>
