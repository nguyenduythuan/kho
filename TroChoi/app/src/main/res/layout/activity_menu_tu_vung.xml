<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/amazone"
    tools:context="com.example.thuanduy.trochoi.MenuTuVung">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:textStyle="bold"
            android:id="@+id/bt0"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_text2"
            android:text="Occupations"
            android:textAllCaps="false"
            android:textColor="#01f7c6"
            android:textSize="25dp" />

        <Button
            android:textStyle="bold"
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_text"
            android:text="People and relationships"
            android:textAllCaps="false"
            android:textColor="#dbfc01"
            android:textSize="25dp" />

        <Button
            android:textStyle="bold"
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_text2"
            android:text="The Family"
            android:textAllCaps="false"
            android:textColor="#fcfdfc"
            android:textSize="25dp" />

        <Button
            android:textStyle="bold"
            android:id="@+id/bt3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_text"
            android:text="Vegetables and  Fruit"
            android:textAllCaps="false"
            android:textColor="#ff01"
            android:textSize="25dp" />

        <Button
            android:textStyle="bold"
            android:id="@+id/bt4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_text2"
            android:text="Animals"
            android:textAllCaps="false"
            android:textColor="#0328f7"
            android:textSize="25dp" />

        <Button
            android:textStyle="bold"
            android:id="@+id/bt5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_text"
            android:text=" Weather and Seasons"
            android:textAllCaps="false"
            android:textColor="#00ff1e"
            android:textSize="25dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
