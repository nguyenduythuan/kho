<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#02fcdf" android:centerColor="#02fcdb" android:endColor="#02fcdb"></gradient>
            <corners android:radius="30dp"/>
            <stroke android:width="2dp" android:color="#0a7b73"></stroke>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#02fcdf" android:centerColor="#0249fc" android:endColor="#02fcdb"></gradient>
            <corners android:radius="30dp"/>
            <stroke android:width="4dp" android:color="#0a777b"></stroke>
        </shape>
    </item>
</selector>