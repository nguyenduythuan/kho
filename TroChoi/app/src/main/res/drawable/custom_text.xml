<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <stroke android:width="2dp" android:color="#000601"></stroke>
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#fcf002" android:centerColor="#4f56ea" android:endColor="#f4fc02"></gradient>
            <corners android:radius="30dp"/>
            <stroke android:width="4dp" android:color="#000601"></stroke>
        </shape>

    </item>

</selector>